<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Baptism by Ink</title>

    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC&display=swap" rel="stylesheet">
    <style>
      body {
        margin: 0;
        padding: 2rem;
        background: url('/papyrus.png') center center no-repeat;
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Amatic SC', serif;
        color: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        animation: fadeIn 1s ease forwards;
      }

      h1 {
        font-size: 2.5rem;
        color: #5c0000;
        margin-bottom: 2rem;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.7);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        width: 300px;
      }

      input, textarea, button {
        font-family: inherit;
        font-size: 1rem;
        padding: 0.5rem;
        border: 1px solid #aaa;
        border-radius: 4px;
      }

      button {
        background: #5c0000;
        color: white;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      button:hover {
        background: #8b0000;
      }

      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
    </style>
  </head>

  <body>
    <h1>Baptism by Ink</h1>
    <form method="POST" action="/thanks">
        <input type="text" name="name" placeholder="Your True Name" required />
        <input type="email" name="email" placeholder="Sacramental Contact" required />
        <textarea name="message" placeholder="Message to the Octavo (optional)" rows="3"></textarea>
        <button type="submit">Submit to the Ink</button>
    </form>

  </body>
</html>
